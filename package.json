{
	"name": "template-express",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"build": "tsc",
		"serve": "nodemon src/index.ts --exec ts-node",
		"jest": "jest --runInBand --detectOpenHandles --passWithNoTests",
		"jest:coverage": "jest --coverage"
	},
	"jest": {
		"testEnvironment": "node",
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"tsConfigFile": "tsconfig.json"
			}
		},
		"testMatch": [
			"./src/tests/**/*.+(ts|tsx|js)"
		]
	},
	"keywords": [],
	"author": "Ramos Aparicio",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"bcrypt": "^5.0.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-validator": "^6.6.1",
		"helmet": "^4.1.1",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.10.9",
		"morgan": "^1.10.0",
		"multer": "^1.4.2",
		"nanoid": "^3.1.12",
		"swagger-jsdoc": "^4.2.0",
		"swagger-ui-express": "^4.1.4",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@shelf/jest-mongodb": "^1.2.3",
		"@types/bcrypt": "^3.0.0",
		"@types/compression": "^1.7.0",
		"@types/cors": "^2.8.7",
		"@types/express": "^4.17.8",
		"@types/express-validator": "^3.0.0",
		"@types/helmet": "0.0.48",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/mongoose": "^5.7.36",
		"@types/morgan": "^1.9.1",
		"@types/multer": "^1.4.4",
		"@types/nanoid": "^2.1.0",
		"@types/node": "^14.11.2",
		"@types/supertest": "^2.0.10",
		"@types/swagger-jsdoc": "^3.0.2",
		"@types/swagger-ui-express": "^4.1.2",
		"cross-env": "^7.0.2",
		"jest": "^26.6.0",
		"mongodb-memory-server": "^6.9.2",
		"nodemon": "^2.0.4",
		"supertest": "^5.0.0",
		"ts-jest": "^26.4.1",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.3"
	}
}
